<div class="w-auto", id="page-content">
<h1 class="text-center mt-3"><%= @article.title %></h1>



<div class="container">
<div class="row justify-content-md-center">
    <div class="col-9 mt-2">
    <div class="card text-center shadow mb-3 bg-white rounded">
        <div class="card-header font-italic">
            by Jan Walczak
        </div>
        <div class="description-show text-left mx-4">
        <%= @article.description%>
        </div>
        <div class="card-body">
            
            
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
        <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
            edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
    </div>
    <div class="row justify-content-center">
        <%= link_to '[ Return to articles listings ]', articles_path(), class: "text-dark mt-0" %>
    </div>
    </div>
</div>
</div>
</div>

