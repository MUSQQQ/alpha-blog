<div class="container" id="edittt">

<%= render 'shared/errors', object: @article %>


<%= form_with(model: @article, class: "shadow-lg p-4 mb-3 bg-#6200b3 rounded", local: true) do |f| %>

    <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Descripton of article" %>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-dark btn-lg"%>
    </div>
<% end %>
<p class="row justify-content-center mb-3">
<%= link_to '[ Cancel and return to articles listings ]', articles_path(), class: "text-dark" %>
</p>

</div>