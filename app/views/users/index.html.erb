<div id="page-content">
<h1 class="text-center mt-4">Users</h1>

<div class="apple_pagination mb-4">
     <%= will_paginate @users, :container => false %>
</div>

<div class= "container">
<% @users.each do |user| %>
    <div class="row justify-content-md-center">
    <div class="col-9 mt-2">
    <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
            <%= pluralize(user.articles.count, "article") %> <!-- pluralize helps in writing the correct form of the noun "article", depending on the number of the articles-->
        </div>
        <div class="card-body">
            <h5 class="card-title"><strong><%= user.username%></strong></h5>
            <%= link_to "View", user_path(user), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-info" %>
            </div>
        <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(user.created_at) %> ago,
            edited <%= time_ago_in_words(user.updated_at) %> ago</small>
        </div>
    </div>
    </div>
    </div>
<% end %>
</div>
</div>