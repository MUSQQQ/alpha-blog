<div class="container" id="edittt">

<%= render 'shared/errors', object: @user %>


<%= form_with(model: @user, class: "shadow-lg p-4 mb-3 bg-#6200b3 rounded", local: true) do |f| %>

    <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "xyz" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "123@xyz.com" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "***" %>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <%= f.submit "Sing up", class: "btn btn-outline-dark btn-lg"%>
    </div>
<% end %>
<p class="row justify-content-center mb-3">
<%= link_to '[ Cancel and return to articles listings ]', articles_path(), class: "text-dark" %>
</p>

</div>