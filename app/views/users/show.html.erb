<div id="page-content">
<h1 class="text-center mt-4"><%= @user.username %></h1>

<% if logged_in? && @user == current_user %>
     <div class="text-center mt-4"><%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %></div>
<% end %>

<div class="apple_pagination mb-2">
     <%= will_paginate @articles, :container => false %>
</div>
<h2 class="text-center mt-4">Articles</h2>
<%= render 'articles/article' %>